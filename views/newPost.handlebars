<div class="post card">
  <div class="card-header">
    <h2 class="card-title">Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <div class="mb-3">
      <label class="form-label" for="post-title">Title</label>
      <input type="text" name="post-title" class="form-control" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="post-body">Content</label>
      <textarea name="post-body" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>

<script src="/js/newPost.js"></script>
