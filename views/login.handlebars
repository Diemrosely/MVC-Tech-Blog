<div class="card">
  <div class="card-header">
    <h2 class="card-title">Login</h2>
  </div>
  <form id="login-form" class="card-body">
    <div class="mb-3">
      <label for="username-input-login" class="form-label">Username</label>
      <input type="text" id="username-input-login" class="form-control" />
    </div>
    <div class="mb-3">
      <label for="password-input-login" class="form-label">Password</label>
      <input type="password" id="password-input-login" class="form-control" />
    </div>
    <button type="submit" id="login-btn" class="btn btn-primary">Login</button>
    <a href="/signup" class="btn btn-link">Sign Up</a>
  </form>
</div>

<script src="/js/login.js"></script>
